<script>
    // Add more floating URLs dynamically
    const floatingUrlsContainer = document.querySelector('.floating-urls');
    const urlExamples = [
        '/blog/latest',
        '/github/repo',
        '/twitter/profile',
        '/youtube/channel',
        '/instagram/photos',
        '/linkedin/job',
        '/facebook/page',
        '/products/new',
        '/services/list'
    ];

    for (let i = 0; i < 15; i++) {
        const url = urlExamples[Math.floor(Math.random() * urlExamples.length)];
        const span = document.createElement('span');
        span.className = 'floating-url';
        span.textContent = url;

        // Random position
        span.style.top = `${Math.random() * 100}%`;
        span.style.left = `${Math.random() * 100}%`;

        // Random opacity
        span.style.opacity = (Math.random() * 0.06 + 0.02).toFixed(2);

        // Random size
        span.style.fontSize = `${Math.random() * 0.8 + 0.8}rem`;

        // Random rotation
        span.style.transform = `rotate(${Math.random() * 40 - 20}deg)`;

        floatingUrlsContainer.appendChild(span);
    }
</script>